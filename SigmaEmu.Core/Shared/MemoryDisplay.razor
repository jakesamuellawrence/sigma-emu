@using SigmaEmu.Core.Models
<div class="bg-grey-darkest rounded-2 text-text-main p-2 overflow-scroll flex-grow-1 d-flex flex-row gap-3">
    @if (Memory == null)
    {
        <p>No memory block given</p>
    }
    else
    {
        <div class="d-flex flex-column w-100 gap-2">
            <div class="d-flex flex-row gap-2">
                <span class="col text-center">Address</span>
                <spam class="col text-center">Value</spam>
            </div>
            @* <p class="m-0 fw-bold">Address</p> *@
            @for (var i = 0; i < Memory.MaxMemory; i++)
            {
                <div class="d-flex flex-row gap-2 align-items-center">
                    <span class="col text-center">@($"{i:x4}")</span>
                    <span class="col d-flex flex-row justify-content-center">
                        <WordStoreDisplay WordStore="Memory[i]"/>
                    </span>
                </div>
            }
        </div>
    }
</div>

@code {

    [Parameter]
    [EditorRequired]
    public Memory? Memory { get; set; }

}