@using SigmaEmu.Core.Models
<div class="bg-grey-darker h-100 flex-shrink-0 d-flex flex-column border-start border-2 border-dark p-3">
    @if (Processor is null)
    {
        <p>No Processor given</p>
    }
    else
    {
        <h3>Control</h3>
        <div class="w-100 d-flex flex-row justify-content-center gap-2">
            <button class="flex-grow-1" @onclick="OnStep">Step</button>
            <button class="flex-grow-1" @onclick="OnReset">Reset</button>
        </div>

        <h3 class="mt-4">Registers</h3>
        <RegisterDisplay Processor="Processor" OnPcEdited="OnPcEdited"/>

        <h3 class="mt-4">Memory</h3>
        <div class="d-flex flex-row overflow-auto">
            <MemoryDisplay Memory="Processor.Memory"/>
            <div class="p-2"></div>
            <MemoryDisplay Memory="Processor.Memory"/>
        </div>
    }
</div>

@code {

    [Parameter]
    [EditorRequired]
    public Processor? Processor { get; set; }

    [Parameter]
    [EditorRequired]
    public EventCallback OnStep { get; set; }

    [Parameter]
    [EditorRequired]
    public EventCallback OnReset { get; set; }

    [Parameter]
    [EditorRequired]
    public EventCallback<WordStore> OnPcEdited { get; set; }

}