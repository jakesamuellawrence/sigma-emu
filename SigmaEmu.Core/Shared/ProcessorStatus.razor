@using SigmaEmu.Core.Models
<div class="bg-grey-darker h-100 flex-shrink-0 d-flex flex-column border-start border-2 border-dark p-3">
    @if (Processor == null)
    {
        <p>No Processor given</p>
    }
    else
    {
        <h3>Memory</h3>
        <div class="d-flex flex-row overflow-auto">
            <MemoryDisplay MemoryArray="Processor.Memory.MemoryArray"/>
            <div class="p-2"></div>
            <MemoryDisplay MemoryArray="Processor.Memory.MemoryArray"/>
        </div>
    }
</div>

@code {

    [Parameter, EditorRequired]
    public Processor? Processor { get; set; }
    
}