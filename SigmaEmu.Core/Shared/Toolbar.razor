<div class="bg-grey-darker d-flex flex-row p-2 border-bottom border-2 border-dark">
    <FileUpload ProcessFile="OnOpen">
        <button class="me-2 pe-none">Open</button>
    </FileUpload>
    <button class="me-2" @onclick="OnAssemble">Assemble</button>
    <button class="me-2" @onclick="OnLoad">Load</button>
    @* <button class="me-2">Save</button> *@
    @* <button class="me-2">Breakpoints</button> *@
</div>

@code {

    [Parameter]
    [EditorRequired]
    public EventCallback OnAssemble { get; set; }

    [Parameter]
    [EditorRequired]
    public EventCallback OnLoad { get; set; }

    [Parameter]
    [EditorRequired]
    public EventCallback<IBrowserFile> OnOpen { get; set; }

}